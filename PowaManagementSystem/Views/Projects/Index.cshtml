@model List<Project>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col-lg-4">
        <h2>POWA Projects</h2>
        <form method="post" action="@Url.Action("Create")">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control" name="Name" />
            </div>
            <div class="form-group">
                <label>Description:</label>
                <input type="text" class="form-control" name="Description" />
            </div>
            <div class="form-group">
                <label>Project Type:</label>
                <input type="text" class="form-control" name="PType" />
            </div>
            <button type="submit" class="btn btn-default">Insert</button>
        </form>
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Project Type</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.PType</td>
                        <td><a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success">Edit</a></td>
                        <td><a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>