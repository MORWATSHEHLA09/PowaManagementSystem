@model List<Staff>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col-lg-4">
        <h2>POWA Staff</h2>
        <form method="post" action="@Url.Action("Create")">
            <div class="form-group">
                <label>First Name:</label>
                <input type="text" class="form-control" name="Firstname" />
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input type="text" class="form-control" name="Lastname" />
            </div>
            <div class="form-group">
                <label>Contact:</label>
                <input type="text" class="form-control" name="Contact" />
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input type="text" class="form-control" name="Address" />
            </div>
            <div class="form-group">
                <label>Position:</label>
                <input type="text" class="form-control" name="Position" />
            </div>
            <button type="submit" class="btn btn-default">Insert</button>
        </form>
    </div>
    <div class="col-lg-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Contact</th>
                    <th>Address</th>
                    <th>Position</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Firstname</td>
                        <td>@item.Lastname</td>
                        <td>@item.Contact</td>
                        <td>@item.Address</td>
                        <td>@item.Position</td>
                        <td><a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success">Edit</a></td>
                        <td><a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>